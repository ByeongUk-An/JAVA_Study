package chap04;

public class Break_Ex04 {
	public static void main(String[] args) {
		// 1. 단일 loop 가 적용된 곳에서 break 탈출
		for (int i = 0; i < 10; i++) {
			System.out.println(i);
			break; // break를 만나면 해당 구문을 빠져 나오게 됨.
		} // 0
		
		System.out.println("============================");

		// 2. for 문 안에서 if 조건을 사용해서 break를 넣어서 해당 구문을 빠져 나온다.

		for (int i = 0; i < 10; i++) {
			if(i==5) {	//i가 5일때 for 문을 빠져 나온다.
				break;
			}
			System.out.println(i);
		}
	}
}
