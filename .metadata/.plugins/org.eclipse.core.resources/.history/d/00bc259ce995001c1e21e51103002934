package chap04;

public class Continue_Ex05 {
	public static void main(String[] args) {
		// 1. 단일 루프에서 continue

		for (int i = 0; i < 10; i++) {
			continue;
//			System.out.println("시발"+ i);
		}

		for (int i = 0; i < 10; i++) {
			System.out.println("시발" + i);
			continue; // continue는 조건 없이 하위에 실행문을 사용하면 오류 발생
//			System.out.println();
		}

		// 2. 조건을 사용해서 continue 처리
		for (int i = 0; i < 10; i++) {
			if (i == 5) {
				continue;
			}
			System.out.print(i + " ");
		}
		System.out.println("===========");
		// 2. 조건을 사용해서 break 처리
		for (int i = 0; i < 10; i++) {
			if (i == 5) {
				break;
			}
			System.out.print(i + " ");
		}
		// 3. 다중 루프문에서 continue 사용
		for (int i = 0; i < 5; i++) {
			for (int j = 0; j < 5; j++) {
				
				System.out.print(i + ", ");
			}
		}
	}

}
